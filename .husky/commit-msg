#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Strip Co-authored-by and any Cursor agent mention so Cursor never appears on GitHub
msg_file="$1"
if [ -f "$msg_file" ]; then
  tmp="${msg_file}.no-cursor"
  grep -v -i -E '^Co-authored-by:|cursoragent' "$msg_file" > "$tmp" && mv "$tmp" "$msg_file"
fi
