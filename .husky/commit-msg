#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Strip Co-authored-by (and any co-author) lines so Cursor/IDE branding never lands in the repo
msg_file="$1"
if [ -f "$msg_file" ]; then
  tmp="${msg_file}.no-coauthor"
  grep -v -i '^Co-authored-by:' "$msg_file" > "$tmp" && mv "$tmp" "$msg_file"
fi
