{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "../dist-electron",
    "rootDir": ".",
    "declaration": true,
    "noEmit": false,
    "composite": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "preload.ts"]
}
