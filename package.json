{
  "name": "onyx-launcher",
  "version": "0.0.1",
  "description": "The premium unified game library.",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite --port 5173",
    "build": "tsc && vite build && tsc -p main/tsconfig.json && tsc -p main/tsconfig.preload.json",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "npx tsc -p main/tsconfig.json && npx tsc -p main/tsconfig.preload.json && concurrently \"npm run dev\" \"wait-on http-get://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "electron:build": "npm run build && electron .",
    "validate-icons": "node scripts/validate-icons.js",
    "generate-icons": "node scripts/generate-icons.js",
    "prebuild": "npm run validate-icons",
    "predist": "npm run generate-icons && npm run validate-icons",
    "increment-build": "node scripts/increment-build.js",
    "dist": "npm run increment-build && npm run predist && tsc && vite build && tsc -p main/tsconfig.json && tsc -p main/tsconfig.preload.json && electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12",
    "png2icons": "^2.0.1",
    "postcss": "^8.4.32",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "axios": "^1.13.2",
    "dotenv": "^17.2.3",
    "electron-store": "^11.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "build": {
    "appId": "com.onyx.launcher",
    "productName": "Onyx",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "signAndEditExecutable": false
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*.js",
      "!dist-electron/**/*.d.ts",
      "!dist-electron/**/*.tsbuildinfo",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "build/icon.ico",
        "to": "icon.ico"
      },
      {
        "from": "resources/icon.png",
        "to": "icon.png"
      },
      {
        "from": "resources/icon.svg",
        "to": "icon.svg"
      }
    ],
    "asar": true,
    "asarUnpack": [],
    "compression": "maximum",
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
